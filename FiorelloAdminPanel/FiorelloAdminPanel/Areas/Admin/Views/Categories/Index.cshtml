@model List<Category>

<div class="card">
    <div style="display:flex; justify-content:space-between; align-items:center">
        <h5 class="card-header">Categories</h5>
        <div style="margin-right:5px">
            <a asp-action="Create" class="btn rounded-pill btn-primary text-white">Create</a>

        </div>
    </div>

    <div class="table-responsive text-nowrap">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Status</th>
                   
                    <th style="text-align:right">Action</th>

                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (Category item in Model)

                {
                    <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.Name</strong></td>
                        <td>
                            @if (item.IsDeactive)
                            {
                                <div class="text-danger">Deactive</div>
                            }
                            else
                            {
                                <div class="text-success">Active</div>
                            }
                        </td>
                        

                        <td>
                            <div class="d-flex" style="justify-content:end">
                                <div style="margin-right:5px">
                                    <a  asp-action="Detail" asp-route-id="@item.Id" class="btn rounded-pill btn-success text-white">Detail</a>

                                </div>
                                <div style="margin-right:5px">
                                    <a  asp-action="Update" asp-route-id="@item.Id" class="btn rounded-pill btn-warning text-white">Update</a>

                                </div>
                                @if (item.IsDeactive)
                                {
                                    <div style="margin-right:5px">
                                        <a  asp-action="Activity" asp-route-id="@item.Id" class="btn rounded-pill btn-danger text-white">Active</a>
                                    </div>
                                }
                                else
                                {
                                    <div style="margin-right:5px">
                                        <a asp-action="Activity" asp-route-id="@item.Id" class="btn rounded-pill btn-danger text-white">Deactive</a>
                                    </div>
                                }

                            </div>
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>